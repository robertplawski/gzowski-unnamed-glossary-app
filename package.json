{
  "name": "gzowski-unnamed-glossary-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @gzowski-unnamed-glossary-app/db db:push",
    "db:studio": "turbo -F @gzowski-unnamed-glossary-app/db db:studio",
    "db:generate": "turbo -F @gzowski-unnamed-glossary-app/db db:generate",
    "db:migrate": "turbo -F @gzowski-unnamed-glossary-app/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^22.13.11",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "npm@10.9.3"
}
